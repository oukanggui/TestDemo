<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SegmentedControlView">
        <attr name="segCornersRadius" format="dimension|reference" />
        <attr name="segBackgroundColor" format="color" />
        <attr name="segSelectedItemBackgroundColor" format="color" />
        <attr name="segTextColor" format="color" />
        <attr name="segSelectedItemTextColor" format="color" />
        <attr name="segItemHorizontalMargin" format="dimension|reference" />
        <attr name="segItemVerticalMargin" format="dimension|reference" />
        <attr name="segSelectedItem" format="integer" />
        <attr name="segItemPadding" format="dimension|reference" />
        <attr name="segTextSize" format="dimension" />
        <attr name="segScrollSelectEnabled" format="boolean" />
        <attr name="segCornersMode">
            <enum name="Round" value="0" />
            <enum name="Circle" value="1" />
        </attr>
    </declare-styleable>

    <!--颜色滑动选择器-->
    <declare-styleable name="ColorPickerView">
        <attr name="indicatorColor" format="color" /><!--指示点颜色-->
        <attr name="indicatorEnable" format="boolean" /><!--是否启用指示点-->
        <attr name="orientation" format="integer">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <!--环形进度布局的自定义-->
    <declare-styleable name="ProgressCircleImageLayout">
        <!--圆环颜色-->
        <attr name="pci_roundColor" format="color" />
        <!--圆环的宽度-->
        <attr name="pci_roundWidth" format="dimension" />
        <!--圆环上的进度颜色-->
        <attr name="pci_progressColor" format="color" />
        <!--进度为0时的默认满弧的进度颜色-->
        <attr name="pci_defaultProgressColor" format="color" />
        <!--圆环上的进度宽度-->
        <attr name="pci_progressWidth" format="dimension" />
        <!--进度值的最大值，一般为100-->
        <attr name="pci_max" format="integer" />
        <!--开始角度，指定进度初始点的绘制位置，设置值应在90-360之间-->
        <attr name="pci_startAngle" format="integer" />
    </declare-styleable>

    <declare-styleable name="PriorityLinearLayout_Layout">
        <attr name="layout_priority" format="enum">
            <enum name="disposable" value="1" />
            <enum name="mini_content_protection" value="2" />
            <enum name="incompressible" value="3" />
        </attr>
        <attr name="layout_miniContentProtectionSize" format="dimension" />
    </declare-styleable>
</resources>